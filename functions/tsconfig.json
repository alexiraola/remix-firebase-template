{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "../build",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "esModuleInterop": true,
    "allowJs": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
